<ui:FluentWindow x:Class="Eryph.Runtime.Uninstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Uninstall eryph-zero" 
        Height="770" Width="1050"
        MinWidth="760"
        MinHeight="600"
        ExtendsContentIntoTitleBar="true"
        WindowBackdropType="Mica"
        WindowCornerPreference="Default"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/catlet_icon.ico"
        Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>

    <Grid >
            <ui:TitleBar
            x:Name="TitleBar"
            Title="Uninstall eryph-zero"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/catlet_icon.ico" SnapsToDevicePixels="True" />
            </ui:TitleBar.Icon>
            </ui:TitleBar>
            <Frame x:Name="MainFrame" Grid.Row="0"
               NavigationUIVisibility="Hidden"
               Source="WelcomePage.xaml"/>
    </Grid>
</ui:FluentWindow>
