<Page x:Class="Eryph.Runtime.Uninstaller.FeedbackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Eryph.Runtime.Uninstaller"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="FeedbackPage"
      SizeChanged="Page_SizeChanged">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid x:Name="MainGrid" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftColumn" Width="300"/>
                <ColumnDefinition x:Name="RightColumn" Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" x:Name="LeftPanel" Margin="16,24,24,24">
                <TextBlock Text="Final Step"
                           FontSize="20"
                           FontWeight="Medium"
                           Margin="0,0,0,16"/>

                <TextBlock x:Name="ContextDescription"
                           Text="Ready to uninstall Eryph from your system."
                           FontSize="14"
                           Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,24"/>

                <TextBlock x:Name="BreadcrumbText"
                           Text="Final Step"
                           FontSize="12"
                           Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                           Margin="0,0,0,8"/>
            </StackPanel>

            <!-- Right Panel -->
            <StackPanel Grid.Column="1" x:Name="RightPanel" Margin="24">
                <TextBlock x:Name="MainTitle"
                           Text="Share Your Feedback"
                           FontSize="28"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBlock x:Name="SubHeaderText"
                           Text="Your feedback helps us improve Eryph for everyone."
                           FontSize="16"
                           Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,32"/>

                <!-- Thank you message -->
                <ui:InfoBar x:Name="ThankYouInfoBar"
                            Title=""
                            Message=""
                            Severity="Success"
                            Visibility="Collapsed"
                            Margin="0,0,0,24"/>

                <TextBlock x:Name="FeedbackPrompt"
                           Text="Please share any additional thoughts or feedback (optional)"
                           FontWeight="Medium"
                           FontSize="18"
                           Margin="0,0,0,24"/>

                <ui:TextBox x:Name="FeedbackTextBox"
                            PlaceholderText="What could we do better? What features would you like to see? Any other thoughts..."
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            MaxLength="1000"
                            MinHeight="120"
                            Margin="0,0,0,24"/>

                <!-- Email Collection (for certain flows) -->
                <StackPanel x:Name="EmailSection" Visibility="Collapsed" Margin="0,0,0,24">
                    <TextBlock x:Name="EmailPrompt"
                               Text="Keep me updated about Eryph improvements (optional)"
                               FontWeight="Medium"
                               FontSize="16"
                               Margin="0,0,0,12"/>
                    <ui:TextBox x:Name="EmailTextBox"
                                PlaceholderText="your.email@example.com"/>
                </StackPanel>

                <TextBlock Text="Uninstall Options"
                           FontWeight="Medium"
                           FontSize="16"
                           Margin="0,0,0,16"/>

                <StackPanel Margin="0,0,0,32">
                    <CheckBox x:Name="RemoveConfigCheckBox"
                              Content="Remove configuration files"
                              Margin="0,0,0,8"
                              Unchecked="RemoveConfigCheckBox_OnUnchecked"/>

                    <CheckBox x:Name="RemoveVirtualMachinesCheckBox"
                              Content="Remove catlets and virtual disks"
                              Margin="16,0,0,0"
                              IsEnabled="{Binding IsChecked, ElementName=RemoveConfigCheckBox}"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button x:Name="BackButton"
                               Content="Back"
                               Appearance="Secondary"
                               Click="BackButton_Click"
                               Width="120"
                               Margin="0,0,16,0"/>
                    <ui:Button x:Name="UninstallButton"
                               Content="Uninstall Eryph"
                               Appearance="Primary"
                               Click="UninstallButton_Click"
                               Width="140"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>