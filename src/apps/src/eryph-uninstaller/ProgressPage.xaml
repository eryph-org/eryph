<Page x:Class="Eryph.Runtime.Uninstaller.ProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Eryph.Runtime.Uninstaller"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="ProgressPage"
      Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="32,24" MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <ui:TextBlock x:Name="HeaderText"
                          Text="Uninstalling eryph"
                          FontTypography="Title"
                          Margin="0,0,0,8"/>
            <ui:TextBlock x:Name="SubHeaderText"
                          Text="Please wait while we remove eryph from your system..."
                          FontTypography="Body"
                          Appearance="Secondary"/>
        </StackPanel>

        <!-- Progress Indicator -->
        <ui:Card Grid.Row="1" Margin="0,0,0,16" x:Name="ProgressCard">
            <StackPanel Margin="24,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ui:ProgressRing x:Name="ProgressRing"
                                     IsIndeterminate="True"
                                     Width="20" Height="20"
                                     Margin="0,0,12,0"/>
                    <ui:SymbolIcon x:Name="CompletionIcon"
                                   Symbol="CheckmarkCircle24"
                                   FontSize="20"
                                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,12,0"
                                   Visibility="Collapsed"/>
                    <ui:TextBlock x:Name="ProgressStatusText"
                                  Text="Initializing uninstallation..."
                                  FontTypography="Body"
                                  VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ui:Card>

        <!-- Progress Log -->
        <ui:Card Grid.Row="2" Margin="0,0,0,16">
            <StackPanel Margin="24">
                <ui:TextBlock Text="Progress Details"
                              FontTypography="Body"
                              Margin="0,0,0,12"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="200">
                    <ui:TextBlock x:Name="LogTextBlock"
                                  FontFamily="Consolas,Courier New,Monospace"
                                  FontTypography="Caption"
                                  Text=""
                                  TextWrapping="Wrap"
                                  Appearance="Secondary"/>
                </ScrollViewer>
            </StackPanel>
        </ui:Card>

        <!-- Success/Error Status -->
        <ui:InfoBar x:Name="StatusInfoBar"
                    Grid.Row="3"
                    Margin="0,0,0,16"
                    Visibility="Collapsed"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <ui:Button x:Name="RestartButton"
                       Content="Restart Now"
                       Appearance="Primary"
                       Click="RestartButton_Click"
                       Visibility="Collapsed"
                       Width="120"
                       Margin="0,0,12,0"/>
            <ui:Button x:Name="CloseButton"
                       Content="Close"
                       Appearance="Primary"
                       Click="CloseButton_Click"
                       IsEnabled="False"
                       Width="120"/>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
