<Page x:Class="Eryph.Runtime.Uninstaller.TechnicalIssuesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Eryph.Runtime.Uninstaller"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="TechnicalIssuesPage">

    <local:TwoColumnLayout
        LeftTitle="Technical Issues"
        ContextDescription="Select your issue to see helpful documentation and get targeted support."
        BreadcrumbText="Technical Issues">
        <local:TwoColumnLayout.PageContent>
            <StackPanel>
                <ui:TextBlock Text="What specific problem are you experiencing?"
                              FontTypography="Title"
                              Margin="0,0,0,24"/>

                <StackPanel>
                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon LockClosed24}"
                               Content="Cannot log in into VMs"
                               Click="IssueButton_Click"
                               Tag="LoginIssues"
                               Margin="0,0,0,16"
                               Height="56"/>

                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Wifi124}"
                               Content="Network access problems"
                               Click="IssueButton_Click"
                               Tag="NetworkIssues"
                               Margin="0,0,0,16"
                               Height="56"/>

                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Document24}"
                               Content="Unclear documentation"
                               Click="IssueButton_Click"
                               Tag="DocumentationIssues"
                               Margin="0,0,0,16"
                               Height="56"/>

                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Warning24}"
                               Content="Other technical problem"
                               Click="IssueButton_Click"
                               Tag="OtherTechnical"
                               Height="56"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,32,0,0">
                    <ui:Button Content="Back"
                               Appearance="Secondary"
                               Click="BackButton_Click"
                               Width="120"/>
                </StackPanel>
            </StackPanel>
        </local:TwoColumnLayout.PageContent>
    </local:TwoColumnLayout>
</Page>