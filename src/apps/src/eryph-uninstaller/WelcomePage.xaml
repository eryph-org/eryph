<Page x:Class="Eryph.Runtime.Uninstaller.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Eryph.Runtime.Uninstaller"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="WelcomePage">

    <local:TwoColumnLayout
        LeftTitle="Choose Your Reason"
        ContextDescription="Your feedback helps us improve eryph for everyone."
        BreadcrumbText="Eryph Uninstaller">
        <local:TwoColumnLayout.PageContent>
            <StackPanel>
                <ui:TextBlock Text="We're sorry to see you go"
                              FontTypography="Title"
                              Margin="0,0,0,8"/>
                <ui:TextBlock Text="Please help us improve eryph by telling us why you're uninstalling."
                              FontTypography="Body"
                              Appearance="Secondary"
                              TextWrapping="Wrap"
                              Margin="0,0,0,32"/>

                <StackPanel>
                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Warning24}"
                               Content="I'm having technical issues"
                               Click="ReasonButton_Click"
                               Tag="{x:Static local:UninstallReason.TechnicalIssues}"
                               Margin="0,0,0,16"
                               Height="56"/>

                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon CheckmarkCircle24}"
                               Content="I no longer need it"
                               Click="ReasonButton_Click"
                               Tag="{x:Static local:UninstallReason.NotNeededAnymore}"
                               Margin="0,0,0,16"
                               Height="56"/>

                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon ArrowClockwise24}"
                               Content="I will reinstall it later"
                               Click="ReasonButton_Click"
                               Tag="{x:Static local:UninstallReason.WillReinstallLater}"
                               Margin="0,0,0,16"
                               Height="56"/>

                    <ui:Button HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon MoreHorizontal24}"
                               Content="Other reason"
                               Click="ReasonButton_Click"
                               Tag="{x:Static local:UninstallReason.Other}"
                               Height="56"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,32,0,0">
                    <ui:Button Content="Cancel"
                               Appearance="Secondary"
                               Click="CancelButton_Click"
                               Width="120"/>
                </StackPanel>
            </StackPanel>
        </local:TwoColumnLayout.PageContent>
    </local:TwoColumnLayout>
</Page>
