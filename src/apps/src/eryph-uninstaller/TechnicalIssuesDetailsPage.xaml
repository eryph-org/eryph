<Page x:Class="Eryph.Runtime.Uninstaller.TechnicalIssuesDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Eryph.Runtime.Uninstaller"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="TechnicalIssuesDetailsPage">

    <local:TwoColumnLayout
        LeftTitle="Get Help"
        ContextDescription="We'd like to help resolve this issue before you uninstall."
        BreadcrumbText="Technical Issues > Get Help">
        <local:TwoColumnLayout.PageContent>
            <StackPanel>
                <!-- Selected Issue Title -->
                <ui:TextBlock Text="{Binding SelectedIssueTitle}"
                              FontTypography="Title"
                              Margin="0,0,0,24"/>

                <!-- Documentation Hint Card -->
                <ui:Card Margin="0,0,0,24">
                    <StackPanel Margin="24">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="Info24"
                                           FontSize="20"
                                           Foreground="{ui:ThemeResource SystemFillColorSuccessBrush}"
                                           Margin="0,0,12,0"/>
                            <ui:TextBlock Text="Helpful Resources"
                                          FontTypography="Subtitle"
                                          VerticalAlignment="Center"/>
                        </StackPanel>
                        <ui:TextBlock Text="{Binding HintText}"
                                      FontTypography="Body"
                                      Appearance="Primary"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,8"/>

                        <ui:HyperlinkButton NavigateUri="{Binding HelpLink}"
                                      Content="{Binding HelpLink}"
                                      Margin="0,0,0,16"/>

                        <ui:TextBlock Text="{Binding DetailsPrompt}"
                                      FontTypography="Body"
                                      Margin="0,0,0,8"/>
                        <ui:TextBox PlaceholderText="{Binding IssueDetailsPlaceholder}"
                                    Text="{Binding IssueDetailsText, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MaxLength="1000"
                                    MinHeight="80"
                                    Margin="0,0,0,16"/>

                        <ui:TextBlock Text="Would you like us to follow up and help resolve this issue?"
                                      FontTypography="Body"
                                      Margin="0,0,0,8"/>
                        <ui:TextBox PlaceholderText="your.email@example.com (optional)"
                                    Text="{Binding EmailText, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button Content="Back"
                               Appearance="Secondary"
                               Click="BackButton_Click"
                               Width="120"
                               Margin="0,0,12,0"/>
                    <ui:Button Content="Request Support"
                               Appearance="Primary"
                               Icon="{ui:SymbolIcon Mail24}"
                               Click="GetHelpButton_Click"
                               Width="150"
                               Margin="0,0,12,0"
                               IsDefault="True"/>
                    <ui:Button Content="Continue to Uninstall"
                               Appearance="Secondary"
                               Click="ContinueButton_Click"
                               Width="160"/>
                </StackPanel>
            </StackPanel>
        </local:TwoColumnLayout.PageContent>
    </local:TwoColumnLayout>
</Page>